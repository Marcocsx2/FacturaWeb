
@model IEnumerable<FacturaWeb.Models.Order>

@{
    ViewBag.Title = "Listar Factura";
}


<!-- Begin Page Content -->
<div class="container-fluid">

    <br>

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Lista de Facturas</h1>

    <br>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Filtros</h6>
        </div>
        <div class="card-body">
            <form>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md my-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="clientId">Cliente</label>
                                </div>
                                <select class="custom-select" id="clientId" name="clientId">
                                    <option selected>Seleccionar...</option>
                                    <option value="1">Cliente 1</option>
                                    <option value="2">Cliente 2</option>
                                    <option value="3">Cliente 3</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md my-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="productId">Producto</label>
                                </div>
                                <select class="custom-select" id="productId" name="productId">
                                    <option selected>Seleccionar...</option>
                                    <option value="1">Prodcuto 1</option>
                                    <option value="2">Prodcuto 2</option>
                                    <option value="3">Prodcuto 3</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md my-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="facturaId"># Factura</label>
                                </div>
                                <input type="text" class="form-control" placeholder="Codigo de Factura" id="facturaId"
                                       name="facturaId" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md my-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="dateFrom">Fecha desde</label>
                                </div>
                                <input type="date" class="form-control" id="dateFrom" name="dateFrom" />
                            </div>
                        </div>
                        <div class="col-md my-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="dateTo">Fecha hasta</label>
                                </div>
                                <input type="date" class="form-control" id="dateTo" name="dateTo" />
                            </div>
                        </div>
                        <div class="col-sm my-2">
                            <div class="input-group justify-content-center">
                                <button type="submit" class="btn btn-block mx-5 btn-primary">Buscar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>


    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Lista de Facturas</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th># Factura</th>
                            <th>Fecha</th>
                            <th>Cliente</th>
                            <th>Total</th>
                            <th>Estado</th>
                            <th>Cancelar</th>
                            <th>Ver</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th># Factura</th>
                            <th>Fecha</th>
                            <th>Cliente</th>
                            <th>Total</th>
                            <th>Estado</th>
                            <th>Cancelar</th>
                            <th>Ver</th>
                        </tr>
                    </tfoot>
                    <tbody>

                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.OrderID </td>
                                <td>@order.OrderDate</td>
                                <td>@order.CustomerID</td>
                                <td>S/. 367.00</td>
                                <td>@order.Active</td>
                                <td><a type="button" class="btn btn-danger">Cancelar</a></td>
                                <td>
                                    @Html.ActionLink("Detaller de Factura", "Details", "Factura")
                                    @*<a type="button" class="btn btn-info"
                                        href="/factura-detalle.html">Ver</a>*@
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
